{
  "compilerOptions": {
    "target": "es2015",
    "experimentalDecorators": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "dist", "**/__tests__/*", "src/__tests__/*"]
}
